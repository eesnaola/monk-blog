{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table>
        <tbody>
        <tr>
            <th>Date</th>
            <td>{{ post.date|date("d/m/Y H:i:s") }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ post.body }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>
                {% for tag in post.tags %}
                    <span>{{ tag.name }}</span>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ post.user }}</td>
        </tr>
        </tbody>
    </table>


    <a href="{{ path('post_index') }}">Back to list</a>
{% endblock %}
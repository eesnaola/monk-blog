{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Tags</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.date|date("d/m/Y H:i:s") }}</td>
                <td><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></td>
                <td>
                    {% for tag in post.tags %}
                        <span>{{ tag.name }}</span>
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}